{
  "name": "todo-backend-express-knex",
  "version": "1.0.0",
  "scripts": {
    "heroku-postbuild": "cd server && npx knex migrate:latest",
    "client": "cd client && yarn start",
    "server": "cd server && ts-node-dev --respawn server.ts",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "test": "cd server && jest",
    "test:watch": "cd server && jest --watch",
    "start": "cd server && node server.js"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "firebase-admin": "^13.4.0",
    "jest": "^30.0.4",
    "knex": "^3.1.0",
    "lodash": "^4.17.15",
    "nodemon": "^2.0.2",
    "pg": "^8.16.3",
    "supertest": "^4.0.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "concurrently": "^4.0.1",
    "ts-jest": "^29.4.0"
  }
}
